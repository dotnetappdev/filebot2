<Window
    x:Class="RenameIt.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Title="RenameIt - File Renaming Tool">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Button x:Name="SelectFolderButton" Content="&#xE8B7; Select Folder" Click="SelectFolderButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="O" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="SelectFilesButton" Content="&#xE8E5; Select Files" Click="SelectFilesButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="O" Modifiers="Control,Shift"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="ClearButton" Content="&#xE894; Clear" Click="ClearButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Delete" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="RenameButton" Content="&#xE73E; Rename Files" Click="RenameButton_Click" Style="{StaticResource AccentButtonStyle}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="R" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <ToggleButton x:Name="ThemeToggle" Content="&#xE793;" ToolTipService.ToolTip="Toggle Theme" Click="ThemeToggle_Click"/>
                <Button x:Name="SettingsButton" Content="&#xE713;" ToolTipService.ToolTip="Settings" Click="SettingsButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Comma" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Options Bar -->
        <Grid Grid.Row="1" Padding="10" Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <CheckBox x:Name="RecursiveCheckBox" Content="Include Subdirectories" IsChecked="False"/>
                <CheckBox x:Name="BackupCheckBox" Content="Backup Before Rename" IsChecked="False"/>
            </StackPanel>
        </Grid>

        <!-- Format Pattern -->
        <Grid Grid.Row="2" Padding="10" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Format Pattern:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="FormatPatternTextBox" 
                     PlaceholderText="e.g., {n} - {s00e00} - {t}" 
                     Text="{n} - {s00e00} - {t}"
                     TextChanged="FormatPatternTextBox_TextChanged"
                     FontFamily="Consolas"/>
            <ComboBox Grid.Column="2" x:Name="SourceComboBox" 
                      SelectedIndex="0" 
                      Margin="10,0,0,0"
                      SelectionChanged="SourceComboBox_SelectionChanged">
                <ComboBoxItem Content="TheMovieDB"/>
                <ComboBoxItem Content="TVMaze"/>
                <ComboBoxItem Content="TheTVDB"/>
            </ComboBox>
        </Grid>

        <!-- Main Content - Dual Pane Layout -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Pane - Original Files -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Original Files" 
                          FontWeight="Bold" 
                          Padding="10"
                          Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                
                <controls:DataGrid Grid.Row="1" 
                                   x:Name="OriginalFilesDataGrid"
                                   AutoGenerateColumns="False"
                                   IsReadOnly="True"
                                   AlternatingRowBackground="{ThemeResource SystemControlBackgroundListLowBrush}"
                                   GridLinesVisibility="Horizontal">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                        <controls:DataGridTextColumn Header="Path" Binding="{Binding DirectoryPath}" Width="2*"/>
                        <controls:DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="100"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>

            <!-- Splitter -->
            <Border Grid.Column="1" Background="{ThemeResource SystemControlBackgroundBaseMediumBrush}"/>

            <!-- Right Pane - Renamed Preview -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Renamed Files Preview" 
                          FontWeight="Bold" 
                          Padding="10"
                          Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                
                <controls:DataGrid Grid.Row="1" 
                                   x:Name="RenamedFilesDataGrid"
                                   AutoGenerateColumns="False"
                                   IsReadOnly="True"
                                   AlternatingRowBackground="{ThemeResource SystemControlBackgroundListLowBrush}"
                                   GridLinesVisibility="Horizontal">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="New File Name" Binding="{Binding NewFileName}" Width="*"/>
                        <controls:DataGridTextColumn Header="Path" Binding="{Binding DirectoryPath}" Width="2*"/>
                        <controls:DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>
        </Grid>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="4" x:Name="OperationProgressBar" 
                     Visibility="Collapsed" 
                     IsIndeterminate="False"
                     Minimum="0" Maximum="100" Value="0"
                     Margin="10,5,10,5"/>

        <!-- Status Bar -->
        <Grid Grid.Row="5" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" x:Name="FileCountTextBlock" Text="" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</Window>
