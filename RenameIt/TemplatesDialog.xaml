<ContentDialog
    x:Class="RenameIt.TemplatesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Manage Templates"
    PrimaryButtonText="Close"
    DefaultButton="Primary"
    Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Padding="0,0,0,10">
            <Button x:Name="AddButton" Content="&#xE710; Add" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="&#xE70F; Edit" Click="EditButton_Click" IsEnabled="False"/>
            <Button x:Name="DeleteButton" Content="&#xE74D; Delete" Click="DeleteButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Templates List -->
        <ListView Grid.Row="1" x:Name="TemplatesListView" 
                  SelectionMode="Single"
                  SelectionChanged="TemplatesListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Padding="10,5">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="{Binding Pattern}" FontFamily="Consolas" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,3,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Info Text -->
        <TextBlock Grid.Row="2" 
                   Text="Templates are stored in a local database and can be reused across sessions."
                   TextWrapping="Wrap"
                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                   Margin="0,10,0,0"/>
    </Grid>
</ContentDialog>
